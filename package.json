{
  "name": "shape-printer-api",
  "version": "1.0.0",
  "description": "Shape Printer API with TypeScript and Koa",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "test:unit": "mocha -r ts-node/register test/unit/*.test.ts",
    "test:integration": "mocha -r ts-node/register test/integration/*.test.ts"
  },
  "dependencies": {
    "@koa/router": "^12.0.1",
    "basic-auth": "^2.0.1",
    "dotenv": "^16.3.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/chai": "^4.3.5",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa__router": "^12.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}